{
  "name": "directed-graph-map",
  "version": "1.0.0",
  "main": "dist/index.js",
  "repository": "git@github.com:wehriam/directed-graph",
  "author": "John Wehr <johnwehr@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf ./dist; flow-remove-types ./src --out-dir ./dist;",
    "flow-typed": "./node_modules/.bin/flow-typed install --overwrite",
    "test": "yarn lint && yarn test:js",
    "test:js": "cross-env NODE_ENV=test jest --runInBand tests/*.test.js",
    "lint": "npm run lint:js && npm run lint:flow",
    "lint:staged": "lint-staged",
    "lint:js": "./node_modules/.bin/eslint -c ./.eslintrc --no-eslintrc --fix .",
    "lint:flow": "./node_modules/.bin/flow --show-all-errors"
  },
  "lint-staged": {
    "*.js": [
      "eslint -c .eslintrc --ignore-path .eslintignore"
    ]
  },
  "pre-commit": [
    "lint:staged",
    "build"
  ],
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "transform": {
      "^.+\\.js(?:\\.flow)?$": "jest-flow-transform"
    }
  },
  "devDependencies": {
    "babel-eslint": "^8.0.1",
    "cross-env": "^5.1.0",
    "eslint": "^4.9.0",
    "eslint-config-bunchtogether": "^1.1.2",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-flowtype-errors": "^3.3.4",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "expect": "^21.2.1",
    "flow-bin": "^0.57.3",
    "flow-remove-types": "^1.2.3",
    "flow-typed": "^2.2.1",
    "ip": "^1.1.5",
    "jest": "^21.2.1",
    "lint-staged": "^4.3.0",
    "pre-commit": "^1.2.2",
    "uuid": "^3.1.0"
  },
  "dependencies": {
    "jest-flow-transform": "^1.0.1"
  }
}
